#!/bin/bash
#PBS -l nodes=1:ppn=1,vmem=16gb,walltime=0:20:00
#PBS -N app-extract-diffusion-stats-rois

inflate=`jq -r '.inflate' config.json`

# inflate ROIs
[[ ${inflate} == 'true' ]] && time singularity exec -e docker://brainlife/mcr:neurodebian1604-r2017a ./compiled/inflateROIs

# move ROI to size and dimensions of dwi
echo $FREESURFER_LICENSE > license.txt
time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/freesurfer:6.0.0 ./vol2vol_freesurfer.sh

# compute ROI metrics
time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/connectome_workbench:1.4.2b ./compute-stats-wb.sh

# generate stats csv
time singularity exec -e docker://brainlife/freesurfer-stats:1.2 ./generateCSV.py

if [ -f ./parc-stats/MEAN.csv ]; then
  mkdir -p raw parc-stats/parc-stats
  mv parc-stats/*.csv parc-stats/parc-stats/
  mv *.nii.gz ./raw/
  rm -rf *.txt*
  echo "complete"
  exit 0
else
  echo "something went wrong. check derivatives"
  exit 1
fi

